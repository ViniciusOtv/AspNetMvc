@{
    ViewBag.Title = "Loja Virtual";

}


@model LojaVirtual.Models.HomeIndexViewModel

@if (Model.Produtos.Length == 0)
{
    <div class="row">
        <span>Não há produto</span>
    </div>

}
else
{
    <div class="row">
        @foreach (var item in Model.Produtos)
        {

            <div class="card espacos shadow-lg p-3 mb-5 bg-white rounded" style="width: 18rem; margin-top: 50px;">
                <img class="card-img-top img" src="@item.Imagem"
                     alt="Imagens dos Produtos">
                <div class="card-body">
                    @* <h5 class="card-title">@Model.NomeCategoria(item)</h5>*@
                    <h4 class="card-title">@item.Nome</h4>
                    <p class="card-text">
                        @item.Descricao
                    </p>
                    <p class="Preco" style="color: rgb(3, 168, 124)">
                        <b>R$@item.Preco</b>
                    </p>
                    <a href="#" class="btn btn-primary" style="background-color: #00838F">Adicionar ao carrinho</a>
                </div>

            </div>

        }

    </div>
}
